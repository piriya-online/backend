extends layout

block content
	.row
		.col-xs-12.col-sm-12.col-md-12.col-lg-12
			.col-sm-6.col-md-offset-3
				.input-group.margin-bottom-25
					span#lbl-orderNo.input-group-addon เลขที่คำสั่งซื้อ
					input#txt_barcode-orderNo.form-control(type='text', aria-describedby='lbl-orderNo')					
					span.input-group-btn
						button#btn-barcode.btn.btn-primary(type='button')
							i.fa.fa-arrow-right
				p#lbl-alert_order.text-center.text-danger
				p.margin-bottom-25
		.col-xs-12.col-sm-12.col-md-12.col-lg-12
			#accordion.panel-group(role='tablist', aria-multiselectable='true')
				.panel.panel-default
					#headingOne.panel-heading(role='tab')
						h4.panel-title
							a(data-toggle='collapse', data-parent='#accordion', href='#waiting', aria-expanded='false')
								strong รายการสินค้ารอส่ง
					#waiting.panel-collapse.collapse(role='tabpanel')
						.panel-body
							#dv-loading_data.text-center.hidden
								img.loading.top-2(src="/images/icons/loading.gif", alt="loading") 
								span.loading.text-muted &nbsp;#{__('loadingData')}					
							#dv-no_data.text-center.hidden
								span.loading.text-muted &nbsp;#{__('noData')}
							.wait.hidden
								.col-sm-12
									.box.margin-bottom-0
										.box-body.padding-0
											.table-responsive
												table#tb-result.table.table-bordered.table-condensed.table-hover.wait.hidden
													thead
														tr
															th.text-center(width="20") #{__('Order No')}
															th.text-center(width="50") #{__('name')}
															th.text-center(width="100") #{__('address')}
															th.text-center(width="20") #{__('shipping method')}
															th.text-center(width="10") #{__('box')} 
															th.text-center(width="10") #{__('Packed Date Time')} 
													tbody
								
								.col-xs-6.margin-top-15.text-center
									button#btn-submit.btn.btn-primary(type="button") ยืนยัน
								.col-xs-6.margin-top-15.text-center
									button#btn-clear.btn.btn-default(type="button") ล้าง

				.panel.panel-default
					#headingOne.panel-heading(role='tab')
						h4.panel-title
							a(data-toggle='collapse', data-parent='#accordion', href='#selected', aria-expanded='false')
								strong รายการสินค้าที่เลือก
					#selected.panel-collapse.collapse(role='tabpanel')
						.panel-body
							#dv-loading_data2.text-center.hidden
								img.loading.top-2(src="/images/icons/loading.gif", alt="loading") 
								span.loading.text-muted &nbsp;#{__('loadingData')}					
							#dv-no_data2.text-center.hidden
								span.loading.text-muted &nbsp;#{__('noData')}
							.wait2.hidden
								.col-sm-12
									.box.margin-bottom-0
										.box-body.padding-0
											.table-responsive
												table#tb-result2.table.table-bordered.table-condensed.table-hover.wait2.hidden
													thead
														tr
															th.text-center(width="20") #{__('Order No')}
															th.text-center(width="50") #{__('name')}
															th.text-center(width="20") #{__('shipping method')}
															th.text-center(width="10") #{__('box')} 
													tbody

				.panel.panel-default
					#headingOne.panel-heading(role='tab')
						h4.panel-title
							a(data-toggle='collapse', data-parent='#accordion', href='#sent', aria-expanded='false')
								strong รายการสินค้าระหว่างส่ง / ส่งแล้ว
					#sent.panel-collapse.collapse(role='tabpanel')
						.panel-body
							ul.nav.nav-tabs(role='tablist')
									li.active(role='presentation')
										a(href='#a', aria-controls='a', role='tab', data-toggle='tab') อยู่ระหว่างส่ง	
									li(role='presentation')
										a(href='#b', aria-controls='b', role='tab', data-toggle='tab') ส่งแล้ว
							
							.tab-content
								#a.tab-pane.active.margin-top-20(role='tabpanel')
									form#form-select-.col-sm-12
										.form-group.col-sm-3.text-danger
											label(for='input') ผู้ส่งสินค้า
											select.select-transporter.form-control
										.form-group.col-sm-3
											span#btn-print.btn.btn-primary.margin-top-25
												i.fa.fa-print
									#dv-loading_data4.text-center.hidden
										img.loading.top-2(src="/images/icons/loading.gif", alt="loading") 
										span.loading.text-muted &nbsp;#{__('loadingData')}					
									#dv-no_data4.text-center.hidden
										span.loading.text-muted &nbsp;#{__('noData')}
									.wait4.hidden
										.col-sm-12
											.box.margin-bottom-0
												.box-body.padding-0
													.table-responsive
														table#tb-result4.table.table-bordered.table-condensed.table-hover.wait4.hidden
															thead
																tr
																	th.text-center(width="10") #{__('No')}
																	th.text-center(width="20") #{__('Order No')}
																	th.text-center(width="50") #{__('name')}
																	th.text-center(width="20") #{__('shipping method')}
																	th.text-center(width="10") #{__('box')}
																	th.text-center(width="10") #{__('Add Date Time')} 
																	th.text-center(width="10") #{__('Transporter')} 
															tbody

								#b.tab-pane.margin-top-20(role='tabpanel')
									form#form-select-.col-sm-12
										.form-group.col-sm-3.text-danger
											label(for='input') #{__('Date')}	
											input#date.datepicker.form-control.col-sm-3(data-date-format="dd/mm/yyyy")
										.form-group.col-sm-3.text-danger
											label(for='input') #{__('Order No')}	
											input#orderNo-sent.form-control.col-sm-3
										.form-group.col-sm-3
											span#btn-search_sent.btn.btn-primary.margin-top-25
												i.fa.fa-search
									#dv-loading_data3.text-center.hidden
										img.loading.top-2(src="/images/icons/loading.gif", alt="loading") 
										span.loading.text-muted &nbsp;#{__('loadingData')}					
									#dv-no_data3.text-center.hidden
										span.loading.text-muted &nbsp;#{__('noData')}
									.wait3.hidden
										.col-sm-12
											.box.margin-bottom-0
												.box-body.padding-0
													.table-responsive
														table#tb-result3.table.table-bordered.table-condensed.table-hover.wait3.hidden
															thead
																tr
																	th.text-center(width="10") #{__('No')}
																	th.text-center(width="20") #{__('Order No')}
																	th.text-center(width="50") #{__('name')}
																	th.text-center(width="20") #{__('shipping method')}
																	th.text-center(width="10") #{__('box')}
																	th.text-center(width="10") #{__('Sent Date Time')} 
																	th.text-center(width="10") #{__('Transporter')} 
															tbody

	#modal-list.modal.fade(tabindex='-1', role='dialog')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
					h4.modal-title รายการสินค้าที่เลือก
				.modal-body
					#dv-loading_wait.text-center.hidden
						img.loading.top-2(src="/images/icons/loading.gif", alt="loading") 
					.table-responsive
						table#tb-confirm.table.table-bordered.table-condensed.table-hover
							thead
								tr
									th.text-center(width="90") #{__('Order No')}
									th.text-center(width="10") #{__('box')}
							tbody
					p.text-right
						b รวมทั้งหมด&nbsp
							span.text-danger.sp-box
						b &nbspกล่อง
				.modal-footer
					button#btn-confirm.btn.btn-primary(type='button') ตกลง
					button.btn.btn-default(type='button', data-dismiss='modal') ยกลิก							

	#modal-send.modal.fade(tabindex='-1', role='dialog')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
					h4.modal-title ยืนยันการส่งรายการสินค้า
				.modal-body
					h4.modal-title #{__('order number')} : 
						span.sp-orderNo
				.modal-footer
					button#btn-send_confirm.btn.btn-primary(type='button') ตกลง
					button.btn.btn-default(type='button', data-dismiss='modal') ยกลิก
	
	#modal-cancel.modal.fade(tabindex='-1', role='dialog')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
					h4.modal-title.text-danger ยืนยันการยกเลิกรายการสินค้าที่เลือก
				.modal-body
					h4.modal-title #{__('order number')} : 
						span.sp-orderNo-cancel
				.modal-footer
					button#btn-send_cancel.btn.btn-danger(type='button') ตกลง
					button.btn.btn-default(type='button', data-dismiss='modal') ยกลิก		
	script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment-with-locales.min.js')
