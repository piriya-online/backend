														th.th-bill.text-center #{__('Bill')}
														th.th-total.text-right #{__('Grand Total')}
												tbody

					#d.tab-pane(role='tabpanel')
						.row.padding-10
							form.col-sm-12
								.form-group.col-sm-3.text-danger
									label(for='input') #{__('Month')}	
									select#selectMonth.form-control.col-sm-3
							.box.box-solid
								.box-body.col-sm-12
									.col-sm-12
										#div-chartDailySale(style="width: 100%; height: 300px;")
